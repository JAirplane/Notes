@inherits LayoutComponentBase

@* links for Login snippet *@
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

<CascadingValue Value="this">

	<PageTitle>Notes</PageTitle>

	<div class="page">
		<header class="top-row px-4">
			<a href="@HeaderLink" class="btn btn-outline-secondary">@HeaderLinkTitle</a>
		</header>
		<main>
			<article class="content px-4">
				@Body
			</article>
		</main>
		<footer class="fixed-bottom py-3 bg-light border-top">
			<div class="row">
				<div class="col text-end text-muted pe-4">All rights reserved.</div>
			</div>
		</footer>
	</div>
</CascadingValue>

@* scripts for Login snippet *@
<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>

@code{
	public string HeaderLinkTitle { get; set; } = string.Empty;
	public string HeaderLink { get; set; } = string.Empty;
	public void RedrawLayout()
	{
		StateHasChanged();
	}
}