
<div class="container">
	<div class="row">
		<div class="col text-center">
			@if (ChildContext is not null)
			{
				@ChildContext
			}
			else
			{
				<img src="images/forbidden.jpg" />
				<p class="text-danger"> You are not authorized to access this page.</p>
				<a href="/">Please, sign in.</a>
			}
		</div>
	</div>
</div>

@code {
	[Parameter]
	public RenderFragment? ChildContext { get; set; }
}
